
<h1><%= @wiki.title %></h1>
<p>Last edited <%= @wiki.updated_at.strftime("%B %d %Y at %H:%M:%S") %></p>
<div class="col-md-8">
  <%= @markdown.render( @wiki.body ).html_safe %>
</div>
<div class="col-md-4">
  <% if policy(@wiki).update? %>
    <%= link_to "Edit Wiki", edit_wiki_path, class:"btn btn-success" %>
  <% end %>
  <% if policy(@wiki).destroy? %>
    <%= link_to "Delete Wiki", @wiki, method: :delete, class: "btn btn-danger", data: {confirm: 'Are you sure you want to delete this post?'} %>
  <% end %>
</div>
